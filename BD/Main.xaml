            <MenuItem Header="Остановки" Click="Ostanovki"/>
            <MenuItem Header="Транспортные маршруты" Click="Marshruti"/>
            <MenuItem Header="Лекарство" Click="Lekarstvo"/>
            <MenuItem Header="Формы упаковки" Click="Formiupakovki"/>
            <MenuItem Header="Виды транспорта" Click="TransportMode"/>
