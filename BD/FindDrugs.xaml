<Window x:Class="BD.FindDrugs"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BD"
        mc:Ignorable="d"
        Title="FindDrugs" Height="190" Width="500"
        >
    <DockPanel>
        <DockPanel DockPanel.Dock="Top">
            <TextBlock x:Name="DrugName" Text="{Binding Лекарство.Название_лекарствa}" FontSize="28"/>
        </DockPanel>
        <DockPanel>
            <StackPanel>
                <TextBlock x:Name="DrugstoreName" Text="{Binding Аптеки.Название}" FontSize="21"/>
            </StackPanel>
        </DockPanel>
    </DockPanel>
</Window>
