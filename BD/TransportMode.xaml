<Window x:Class="BD.TransportMode"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BD"
        mc:Ignorable="d"
        Title="Виды транспорта" Height="408" Width="809">
    <DockPanel>
        <DockPanel DockPanel.Dock="Top">
            <Button Content="Закрыть" DockPanel.Dock="Right" FontSize="16" FontFamily="Times New Roman" FontWeight="Bold" />
            <StackPanel Orientation="Horizontal">
                <Button Content="Добавить" FontSize="16" FontFamily="Times New Roman" FontWeight="Bold"/>
                <Button Content="Изменить" FontSize="16" FontFamily="Times New Roman" FontWeight="Bold" />
                <Button Content="Удалить" FontSize="16" FontFamily="Times New Roman" FontWeight="Bold"/>
            </StackPanel>
        </DockPanel>
        <StackPanel Height="50" DockPanel.Dock="Bottom"/>
        <DataGrid x:Name="DataGrid">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Вид_транспорта}" ClipboardContentBinding="{x:Null}" Header="Вид транспорта" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</Window>

